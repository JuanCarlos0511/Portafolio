<nav class="sidebar">
  <div class="sidebar-content">
    <div class="logo">
      <h2>JcGuzman</h2>
    </div>
    
    <ul class="nav-menu">
      <li><a href="#inicio">HOME</a></li>
      <li><a href="#sobre-mi">ABOUT ME</a></li>
      <li><a href="#proyectos">PROJECTS</a></li>
      <li><a href="#skills">SKILLS</a></li>
      <li><a href="#contacto">CONTACT</a></li>
    </ul>
    
    <div class="contact-button">
      <a href="#contacto" class="btn-primary">CONTACT</a>
    </div>
  </div>
</nav>

<style>
.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  width: 280px;
  background: rgba(26, 26, 46, 0.95);
  backdrop-filter: blur(10px);
  border-right: 1px solid rgba(255, 255, 255, 0.1);
  z-index: 1000;
  transition: transform 0.3s ease;
}

.sidebar-content {
  padding: 2rem 1.5rem;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.logo h2 {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-light);
  margin-bottom: 3rem;
}

.nav-menu {
  list-style: none;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  margin-top: 2rem;
}

.nav-menu li a {
  color: var(--text-muted);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.95rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  padding: 0.5rem 0;
  display: block;
  position: relative;
}

.nav-menu li a:hover {
  color: var(--text-light);
  transform: translateX(8px);
}

.nav-menu li a::before {
  content: '';
  position: absolute;
  left: -15px;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 2px;
  background: linear-gradient(45deg, var(--accent-blue), var(--light-blue));
  transition: width 0.3s ease;
}

.nav-menu li a:hover::before {
  width: 8px;
}

.contact-button {
  margin-top: 2rem;
}

/* Responsive */
@media (max-width: 1024px) {
  .sidebar {
    width: 250px;
  }
}

@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-100%);
    width: 100%;
    background: rgba(26, 26, 46, 0.98);
  }
  
  .sidebar.open {
    transform: translateX(0);
  }
}
</style>
