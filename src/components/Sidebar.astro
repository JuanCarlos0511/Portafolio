<style>
.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  width: 280px;
  z-index: 1000;
  transition: transform 0.3s ease;
  overflow: hidden;
}

.sidebar-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, 
    rgba(26, 26, 46, 0.95) 0%, 
    rgba(20, 20, 35, 0.98) 50%, 
    rgba(26, 26, 46, 0.95) 100%);
  backdrop-filter: blur(20px);
  border-right: 1px solid rgba(100, 200, 255, 0.2);
  box-shadow: 2px 0 20px rgba(0, 0, 0, 0.3);
}

.sidebar-backdrop::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, 
    transparent 0%, 
    rgba(100, 200, 255, 0.05) 25%, 
    transparent 50%, 
    rgba(255, 100, 200, 0.05) 75%, 
    transparent 100%);
  animation: shimmer 10s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.7; }
}

.sidebar-content {
  position: relative;
  z-index: 2;
  padding: 1.5rem 1rem;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow-y: auto;
}

.logo {
  margin-bottom: 2rem;
  text-align: center;
  padding: 1rem 0;
}

.logo-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 0.8rem;
  margin-bottom: 0.5rem;
}

.logo-image {
  width: 60px;
  height: 60px;
  object-fit: contain;
  transition: all 0.3s ease;
}

.logo-image:hover {
  transform: scale(1.1);
  filter: drop-shadow(0 0 10px rgba(100, 200, 255, 0.5));
}

.logo-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.logo-brackets {
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--accent-blue);
  animation: pulse 2s ease-in-out infinite;
}

.logo-name {
  font-size: 1.5rem;
  font-weight: normal;
  color: var(--text-light);
  background: linear-gradient(135deg, var(--text-light) 0%, var(--light-blue) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-family: var(--font-titles);
  letter-spacing: 0.02em;
}

.logo-subtitle {
  font-size: 0.8rem;
  color: var(--text-muted);
  font-weight: 400;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-family: var(--font-system);
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.nav-menu {
  list-style: none;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  gap: 0.3rem;
  margin: 1rem 0;
  padding: 0;
}

.nav-menu li a {
  color: var(--text-muted);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.85rem;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
  padding: 0.8rem 1.2rem;
  display: flex;
  align-items: center;
  gap: 0.8rem;
  border-radius: 12px;
  position: relative;
  overflow: hidden;
  font-family: var(--font-system);
}

.nav-menu li a::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  height: 100%;
  background: linear-gradient(90deg, 
    rgba(100, 200, 255, 0.1) 0%, 
    rgba(100, 200, 255, 0.05) 100%);
  transition: width 0.3s ease;
  z-index: -1;
}

.nav-menu li a:hover::before {
  width: 100%;
}

.nav-menu li a:hover {
  color: var(--text-light);
  transform: translateX(8px);
  background: rgba(100, 200, 255, 0.05);
  border-left: 3px solid var(--accent-blue);
}

.nav-icon {
  font-size: 1.2rem;
  transition: transform 0.3s ease;
}

.nav-menu li a:hover .nav-icon {
  transform: scale(1.2);
}

.nav-menu li a.active,
.nav-menu li a:hover {
  color: var(--text-light);
  transform: translateX(8px);
  background: rgba(100, 200, 255, 0.15);
  border-left: 3px solid var(--accent-blue);
}

.nav-menu li a.active .nav-icon {
  transform: scale(1.2);
  filter: drop-shadow(0 0 8px rgba(100, 200, 255, 0.5));
}

.nav-text {
  font-weight: 600;
}

.contact-section {
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 1px solid rgba(100, 200, 255, 0.1);
}

.contact-button {
  margin-bottom: 1.5rem;
}

.btn-primary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  width: 100%;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, var(--accent-blue) 0%, var(--light-blue) 100%);
  color: white;
  text-decoration: none;
  border-radius: 12px;
  font-weight: 600;
  font-size: 0.9rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(255, 255, 255, 0.2), 
    transparent);
  transition: left 0.5s ease;
}

.btn-primary:hover::before {
  left: 100%;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(100, 200, 255, 0.3);
}

.btn-icon {
  font-size: 1.1rem;
}

.social-links-mini {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-top: 1rem;
}

.social-links-mini a {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: rgba(100, 200, 255, 0.1);
  border-radius: 50%;
  color: var(--text-muted);
  transition: all 0.3s ease;
  border: 1px solid rgba(100, 200, 255, 0.2);
}

.social-links-mini a:hover {
  background: var(--accent-blue);
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(100, 200, 255, 0.3);
}

/* Responsive */
@media (max-width: 1024px) {
  .sidebar {
    width: 250px;
  }
}

@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-100%);
    width: 100%;
  }
  
  .sidebar.open {
    transform: translateX(0);
  }
  
  .sidebar-backdrop {
    background: rgba(26, 26, 46, 0.98);
  }
}
</style>

<script>
// Active section highlighting
document.addEventListener('DOMContentLoaded', function() {
  const navLinks = document.querySelectorAll('.nav-menu a[data-section]');
  
  function updateActiveSection() {
    const sections = ['inicio', 'sobre-mi', 'proyectos', 'trayectoria', 'tools', 'certificados'];
    const scrollPosition = window.scrollY + window.innerHeight / 2;
    
    let currentSection = 'inicio';
    
    for (const sectionId of sections) {
      const element = document.getElementById(sectionId);
      if (element) {
        const { offsetTop, offsetHeight } = element;
        if (scrollPosition >= offsetTop && scrollPosition < offsetTop + offsetHeight) {
          currentSection = sectionId;
          break;
        }
      }
    }
    
    // Update active states
    navLinks.forEach(link => {
      const section = link.getAttribute('data-section');
      if (section === currentSection) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });
  }
  
  // Smooth scroll for navigation links
  navLinks.forEach(link => {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const targetId = link.getAttribute('data-section');
      const targetElement = document.getElementById(targetId || '');
      
      if (targetElement) {
        targetElement.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
  
  // Listen for scroll events
  window.addEventListener('scroll', updateActiveSection);
  updateActiveSection(); // Check initial position
});
</script>
