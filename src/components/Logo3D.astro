---
// Logo3D.astro - Logo 3D interactivo con forma C-J
---

<div class="logo-3d-container">
  <div class="logo-3d-scene">
    <div class="logo-3d-group" id="logo3D">
      <!-- Letra C en 3D -->
      <div class="letter-c">
        <!-- Segmento superior -->
        <div class="c-segment c-top"></div>
        <!-- Segmento izquierdo -->
        <div class="c-segment c-left"></div>
        <!-- Segmento inferior -->
        <div class="c-segment c-bottom"></div>
        <!-- Caras laterales para dar profundidad -->
        <div class="c-side c-top-side"></div>
        <div class="c-side c-left-side"></div>
        <div class="c-side c-bottom-side"></div>
      </div>
      
      <!-- Letra J en 3D -->
      <div class="letter-j">
        <!-- Segmento superior horizontal -->
        <div class="j-segment j-top"></div>
        <!-- Segmento vertical derecho -->
        <div class="j-segment j-right"></div>
        <!-- Segmento inferior (gancho) -->
        <div class="j-segment j-hook"></div>
        <!-- Caras laterales para dar profundidad -->
        <div class="j-side j-top-side"></div>
        <div class="j-side j-right-side"></div>
        <div class="j-side j-hook-side"></div>
      </div>
      
      <!-- Partículas decorativas -->
      <div class="particles-container">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
      </div>
    </div>
  </div>
  
  <!-- Reflexión -->
  <div class="logo-reflection"></div>
</div>

<style>
.logo-3d-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
  perspective: 1200px;
  margin: 2rem 0;
}

.logo-3d-scene {
  position: relative;
  transform-style: preserve-3d;
  animation: float 6s ease-in-out infinite;
}

.logo-3d-group {
  position: relative;
  transform-style: preserve-3d;
  width: 120px;
  height: 100px;
  cursor: grab;
  transition: transform 0.3s ease;
}

.logo-3d-group:hover {
  transform: scale(1.1);
}

/* Letra C */
.letter-c {
  position: absolute;
  left: 0;
  top: 0;
  width: 50px;
  height: 80px;
  transform-style: preserve-3d;
}

.c-segment {
  position: absolute;
  background: linear-gradient(135deg, #4169e1 0%, #00bfff 100%);
  border-radius: 4px;
  box-shadow: 0 0 20px rgba(65, 105, 225, 0.5);
}

.c-top {
  width: 40px;
  height: 8px;
  top: 0;
  left: 0;
  transform: translateZ(6px);
}

.c-left {
  width: 8px;
  height: 65px;
  top: 8px;
  left: 0;
  transform: translateZ(6px);
}

.c-bottom {
  width: 40px;
  height: 8px;
  bottom: 0;
  left: 0;
  transform: translateZ(6px);
}

/* Caras laterales de C para profundidad */
.c-side {
  position: absolute;
  background: linear-gradient(90deg, #4169e1 0%, #2147a3 100%);
}

.c-top-side {
  width: 40px;
  height: 12px;
  top: 0;
  left: 0;
  transform: rotateX(-90deg) translateZ(6px);
  transform-origin: bottom;
}

.c-left-side {
  width: 12px;
  height: 65px;
  top: 8px;
  left: 0;
  transform: rotateY(-90deg) translateZ(6px);
  transform-origin: right;
}

.c-bottom-side {
  width: 40px;
  height: 12px;
  bottom: 0;
  left: 0;
  transform: rotateX(90deg) translateZ(-6px);
  transform-origin: top;
}

/* Letra J */
.letter-j {
  position: absolute;
  right: 0;
  top: 0;
  width: 50px;
  height: 80px;
  transform-style: preserve-3d;
}

.j-segment {
  position: absolute;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 4px;
  box-shadow: 0 0 20px rgba(255, 107, 107, 0.5);
}

.j-top {
  width: 40px;
  height: 8px;
  top: 0;
  left: 0;
  transform: translateZ(6px);
}

.j-right {
  width: 8px;
  height: 50px;
  top: 8px;
  right: 0;
  transform: translateZ(6px);
}

.j-hook {
  width: 25px;
  height: 8px;
  bottom: 0;
  right: 8px;
  border-radius: 8px 0 8px 8px;
  transform: translateZ(6px);
}

/* Caras laterales de J para profundidad */
.j-side {
  position: absolute;
  background: linear-gradient(90deg, #ff6b6b 0%, #cc5555 100%);
}

.j-top-side {
  width: 40px;
  height: 12px;
  top: 0;
  left: 0;
  transform: rotateX(-90deg) translateZ(6px);
  transform-origin: bottom;
}

.j-right-side {
  width: 12px;
  height: 50px;
  top: 8px;
  right: 0;
  transform: rotateY(90deg) translateZ(-6px);
  transform-origin: left;
}

.j-hook-side {
  width: 25px;
  height: 12px;
  bottom: 0;
  right: 8px;
  transform: rotateX(90deg) translateZ(-6px);
  transform-origin: top;
  border-radius: 8px 0 8px 8px;
}

/* Partículas decorativas */
.particles-container {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.particle {
  position: absolute;
  width: 4px;
  height: 4px;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.8) 0%, transparent 70%);
  border-radius: 50%;
  animation: float-particle 4s ease-in-out infinite;
}

.particle:nth-child(1) {
  top: 10%;
  left: -10%;
  animation-delay: 0s;
}

.particle:nth-child(2) {
  top: 80%;
  right: -10%;
  animation-delay: 1s;
}

.particle:nth-child(3) {
  top: 30%;
  right: 110%;
  animation-delay: 2s;
}

.particle:nth-child(4) {
  top: 60%;
  left: 110%;
  animation-delay: 3s;
}

/* Reflexión */
.logo-reflection {
  width: 120px;
  height: 50px;
  background: linear-gradient(to bottom, 
    rgba(65, 105, 225, 0.1) 0%,
    rgba(255, 107, 107, 0.05) 50%,
    transparent 100%);
  margin-top: 1rem;
  transform: scaleY(-0.3);
  opacity: 0.3;
  filter: blur(1px);
}

/* Animaciones */
@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotateY(0deg);
  }
  25% {
    transform: translateY(-10px) rotateY(90deg);
  }
  50% {
    transform: translateY(-5px) rotateY(180deg);
  }
  75% {
    transform: translateY(-15px) rotateY(270deg);
  }
}

@keyframes float-particle {
  0%, 100% {
    transform: translateY(0px) scale(1);
    opacity: 0;
  }
  50% {
    transform: translateY(-20px) scale(1.5);
    opacity: 1;
  }
}

/* Efectos hover */
.logo-3d-group:hover .c-segment,
.logo-3d-group:hover .j-segment {
  box-shadow: 0 0 30px rgba(65, 105, 225, 0.8);
  transform: translateZ(8px);
}

.logo-3d-group:hover .c-side,
.logo-3d-group:hover .j-side {
  background: linear-gradient(90deg, #5577ff 0%, #3355cc 100%);
}

/* Responsive */
@media (max-width: 768px) {
  .logo-3d-container {
    height: 150px;
  }
  
  .logo-3d-group {
    width: 90px;
    height: 75px;
  }
  
  .letter-c, .letter-j {
    width: 37px;
    height: 60px;
  }
  
  .c-top, .c-bottom, .j-top {
    width: 30px;
    height: 6px;
  }
  
  .c-left, .j-right {
    width: 6px;
    height: 48px;
  }
  
  .j-hook {
    width: 20px;
    height: 6px;
  }
}
</style>

<script>
// Interactividad del logo 3D
document.addEventListener('DOMContentLoaded', () => {
  const logo3D = document.getElementById('logo3D');
  
  if (logo3D) {
    let isMouseDown = false;
    let startX = 0;
    let startY = 0;
    let currentRotationX = 0;
    let currentRotationY = 0;
    
    // Mouse events
    logo3D.addEventListener('mousedown', (e) => {
      isMouseDown = true;
      startX = e.clientX;
      startY = e.clientY;
      logo3D.style.cursor = 'grabbing';
    });
    
    document.addEventListener('mousemove', (e) => {
      if (!isMouseDown) return;
      
      const deltaX = e.clientX - startX;
      const deltaY = e.clientY - startY;
      
      currentRotationY += deltaX * 0.5;
      currentRotationX -= deltaY * 0.5;
      
      logo3D.style.transform = `rotateX(${currentRotationX}deg) rotateY(${currentRotationY}deg) scale(1.1)`;
      
      startX = e.clientX;
      startY = e.clientY;
    });
    
    document.addEventListener('mouseup', () => {
      if (isMouseDown) {
        isMouseDown = false;
        logo3D.style.cursor = 'grab';
      }
    });
    
    // Touch events para dispositivos móviles
    logo3D.addEventListener('touchstart', (e) => {
      e.preventDefault();
      const touch = e.touches[0];
      startX = touch.clientX;
      startY = touch.clientY;
    });
    
    logo3D.addEventListener('touchmove', (e) => {
      e.preventDefault();
      const touch = e.touches[0];
      const deltaX = touch.clientX - startX;
      const deltaY = touch.clientY - startY;
      
      currentRotationY += deltaX * 0.5;
      currentRotationX -= deltaY * 0.5;
      
      logo3D.style.transform = `rotateX(${currentRotationX}deg) rotateY(${currentRotationY}deg) scale(1.1)`;
      
      startX = touch.clientX;
      startY = touch.clientY;
    });
  }
});
</script>
